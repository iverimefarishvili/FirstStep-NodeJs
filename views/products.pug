                .col-md-3.col-sm-6(style='margin:20px;')
                    figure.card.card-product
                    .img-wrap
                        img(src='https://img-prod-cms-rt-microsoft-com.akamaized.net/cms/api/am/imageFileData/RW6KQQ?ver=d4c4&q=90&m=6&h=200&w=200&b=%23FFFFFFFF&f=jpg&o=f&aim=true' href="/productinside" )
