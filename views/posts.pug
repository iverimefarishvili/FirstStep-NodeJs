extends index.pug


        
        
        
block content        
        
        .container

            a.btn.btn-success(href='/createpost' id='button') create New Post
            .row
              each user in users
                .col-md-3.col-sm-6(style="margin:20px;")
                    a(href="/posts/"+ user._id) #{user.productname}
                    hr
                    h6 Posted on january 1, 2019 at 12:00 PM
                    hr
                    img(src='https://media.istockphoto.com/photos/laughing-woman-in-park-picture-id658617510?k=6&m=658617510&s=612x612&w=0&h=Ycl_BBwWQop7Wj1wWG3nyQqB5glPxRuqmb02WpKp0ao=', alt='' style="width:300px;")
                    p.lead
                        | #{user.text}